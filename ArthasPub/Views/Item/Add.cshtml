@model ArthasPub.Models.Item
@{
    ViewBag.Title = "Add to Cart";
}

<h2>Add to Order</h2>
@using (@Html.BeginForm())
{
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-4">
                @*<img style="min-height:200px; width:200px;" src="@Url.Content(Model.pro_image)" />*@
            </div>
            <div class="col-lg-8 col-md-8 col-sm-8">
                <h1>Product Name: @Model.Name</h1>
                <h2>Price: HKD @Model.Price</h2>
                <h6>Description: @Model.Description</h6>
                <input type="number" name="qty" value="0" id="qty" />
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}
